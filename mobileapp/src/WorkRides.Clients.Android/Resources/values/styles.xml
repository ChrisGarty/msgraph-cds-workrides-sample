<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <color name="background">#00358B</color>
  <color name="button">#F1C40F</color>

  <style name="MainTheme" parent="MainTheme.Base">
  </style>
  
  <!-- Base theme applied no matter what API -->
  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
    <item name="windowNoTitle">true</item>
    <!--We will be using the toolbar so no need to show ActionBar-->
    <item name="windowActionBar">false</item>
    <!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette -->
    <!-- colorPrimary is used for the default action bar background -->
    <item name="colorPrimary">#00358B</item>
    <!-- colorPrimaryDark is used for the status bar -->
    <item name="colorPrimaryDark">#00358B</item>
    <!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
    <item name="colorAccent">#007AFF</item>
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
    <item name="windowActionModeOverlay">true</item>
    <item name="android:actionMenuTextAppearance">@style/MyMenuTextAppearance</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
    <item name="android:colorControlHighlight">#007AFF</item>
    <item name="android:windowBackground">@color/background</item>
    <item name="android:colorControlActivated">#007AFF</item>
    <item name="android:colorActivatedHighlight">#007AFF</item>
    <item name="android:colorPressedHighlight">#963192B3</item>
    <item name="android:colorLongPressedHighlight">#007AFF</item>
    <item name="android:colorFocusedHighlight">#007AFF</item>

    <item name="android:actionMenuTextColor">@color/button</item>
  </style>

  <style name="MyMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.Splash" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="windowNoTitle">true</item>
    <item name="android:background">@drawable/splash_drawable</item>  
    <item name="colorPrimaryDark">#264F9E</item>
  </style>
  
  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#00358B</item>
  </style>
  
  <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.Light.DatePicker">
    <item name="android:headerBackground">#00358B</item>
  </style>
  
  <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
    <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
  </style>
   
</resources>
