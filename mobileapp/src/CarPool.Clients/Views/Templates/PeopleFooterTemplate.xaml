<?xml version="1.0" encoding="UTF-8"?>
<ContentView
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="CarPool.Clients.Core.Views.PeopleFooterTemplate">
    <ContentView.Resources>
        <ResourceDictionary>

            <Style x:Key="FooterPanelStyle" TargetType="Grid">
                <Setter Property="HeightRequest" Value="60" />
            </Style>

            <Style x:Key="FooterTextStyle" TargetType="Label">
                <Setter Property="FontSize" Value="Small" />
                <Setter Property="TextColor" Value="{StaticResource LabelsColor}" />
                <Setter Property="HorizontalOptions" Value="Center" />
                <Setter Property="VerticalOptions" Value="Center" />
                <Setter Property="Margin" Value="0, 6" />
            </Style>

        </ResourceDictionary>
    </ContentView.Resources>
    <ContentView.Content>
        <Grid 
            Style="{StaticResource FooterPanelStyle}">
            <Label 
                Text="End of results"
                Style="{StaticResource FooterTextStyle}"/>
        </Grid>
    </ContentView.Content>
</ContentView>
