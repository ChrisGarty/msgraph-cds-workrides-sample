<?xml version="1.0" encoding="UTF-8"?>
<ContentView 
    xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="CarPool.Clients.Core.Views.DataSettingsItemTemplate">
    <ContentView.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="1" />
            </Grid.RowDefinitions>
            <Label 
                Grid.Row="0"
                Text="{Binding Name}"/>
            <Label     
                Grid.Row="0"
                Text="{Binding Driver}"/>
            <Grid 
                Grid.Row="1"
                BackgroundColor="{StaticResource GrayColor}"
                HeightRequest="1"
                Margin="24, 0"/>
        </Grid>
    </ContentView.Content>
</ContentView>